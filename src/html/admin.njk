          '<div class="form-group row">', PHP_EOL,
            '<label for="password" class="col-sm-3 col-form-label">Adgangskode</label>', PHP_EOL,
            '<div class="col-sm-9">', PHP_EOL,
              '<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>', PHP_EOL,
            '</div>', PHP_EOL,
          '</div>', PHP_EOL,
          '<div class="form-group row">', PHP_EOL,
            '<div class="col-sm-9">', PHP_EOL,
              '<button type="submit" name="submit" class="btn btn-primary mb-2">Send</button>', PHP_EOL,
